<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view"

    android:layout_width="match_parent"

    android:layout_height="320dp"

    android:layout_margin="5dp"

    card_view:cardCornerRadius="24dp"
    card_view:cardBackgroundColor="#d4d2d2">

    <LinearLayout
        android:tag="lin_layout"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:id="@+id/extra_city_name"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_humidity"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_pressure"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_temp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_sunrise"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_sunset"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_wind_speed"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_wind_deg"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_weather_description"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_weather_main"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/extra_city_time"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp" />

    </LinearLayout>



</android.support.v7.widget.CardView>

