<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_extra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="1dp"
    card_view:cardBackgroundColor="@color/cards_bg"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="12dp"
    tools:context=".Weather.WeatherInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:tag="lin_layout">


        <TextView
            android:id="@+id/extra_city_temp"
            style="@style/text_style_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/extra_city_humidity"
            style="@style/text_style_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/extra_city_pressure"
            style="@style/text_style_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/extra_city_sunrise"
            style="@style/text_style_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/extra_city_sunset"
            style="@style/text_style_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/extra_city_wind_speed"
            style="@style/text_style_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/extra_city_wind_deg"
            style="@style/text_style_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/extra_city_weather_description"
            style="@style/text_style_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp" />

        <!--       <TextView
                   android:id="@+id/extra_city_weather_main"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="6dp"
                   android:layout_marginLeft="6dp"
                   style="@style/text_style_weather_desc"
                   />
       -->
        <TextView
            android:id="@+id/extra_city_time"
            style="@style/text_style_weather_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>