<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather_info_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faa1192.weatherforecast.WeatherInfoContainer"
    android:orientation="vertical"
    android:gravity="right">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:id="@+id/refresh_extra_data" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.faa1192.weatherforecast.WeatherInfoFragment"
        android:id="@+id/fragment3"
        tools:layout="@layout/fragment_weather_info" />

</LinearLayout>
